#This is the only place to set aliases 
#they go to bash and zsh
#
#my aliases
alias zz='less -N -M'
alias g='grep'
alias gr='grep -R'
alias gi='grep -i'
alias gv='grep -v'
alias gri='grep -i -R'
alias s='source'
alias gs='git status'
alias gl='git log --graph --abbrev-commit --pretty=oneline --decorate'
alias ll='ls -lha'
alias vv='vim'
alias h='history'
alias wl='wc -l'
alias py='python3'
alias pip='python3 -m pip'
alias pyd='python3 -m pdb'
alias ec='echo'
alias gcred="git config credential.helper store && git config --global credential.helper 'cache --timeout 7200'"
alias gd='git diff'
alias rp='realpath'
alias crgith='~/genconf/dotfiles/cr_gith_repo.sh'
alias cl='vim ~/cl'
alias ssss='systemctl suspend'
alias hhhh='systemctl hibernate'
alias gggc='cd ~/Documents/Perso_c/36-Aux/configs/genconf/c_laptop' 

#git prel
function gprel() {
    if [ "$1" != "" ] # or better, if [ -n "$1" ]
    then
        git commit -a -m "$1"
    else
        echo "need a message"
    fi
    git push
}

#this alias keep the colors in tmux
alias tmux='tmux -2'
# When using sudo, use alias expansion (otherwise sudo ignores your aliases)
alias sudo='sudo '

alias pls='sudo $(fc -ln -1)'

#git tag alias
function gtg() {
    if [ "$1" != "" ] # or better, if [ -n "$1" ]
    then
        git tag $1
    else
        echo "need a tag name"
    fi
    git push origin --tags
}


#general
#this disables the flow control to terminal to enable using ctrl+s in vim (in general it freezes the term)
stty -ixon

#git shortcuts
git config --global alias.co checkout
git config --global alias.br branch
git config --global alias.ci commit
git config --global alias.st status


