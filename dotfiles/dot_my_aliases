#This is the only place to set aliases
#they go to bash and zsh
#
#my aliases
alias zz='less'
alias g='grep'
alias gr='grep -R'
alias gi='grep -i'
alias gri='grep -i -R'
alias s='source'
alias gs='git status'
alias gl='git log --graph --abbrev-commit --pretty=oneline --decorate'
alias ll='ls -lha'
alias vg='vim'
alias h='history'
alias wl='wc -l'
alias py='python'
alias ec='echo'
alias gcred="git config credential.helper store && git config --global credential.helper 'cache --timeout 7200'"
alias rp='realpath'
function gprel() {
    if [ "$1" != "" ] # or better, if [ -n "$1" ]
    then
        git commit -a -m "$1"
    else
        echo "need a message"
    fi
    git push
}


#general
#this disables the flow control to terminal to enable using ctrl+s in vim (in general it freezes the term)
stty -ixon

#git shortcuts
git config --global alias.co checkout
git config --global alias.br branch
git config --global alias.ci commit
git config --global alias.st status







